<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>This is the campgrounds page!</h1>
            <p>View our hand-picked campgrounds all over the world.</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-large"> Add New Campground</a>
            </p>
        </div>
        
       
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <% campgrounds.forEach(function (compground) { %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= compground.image %>" alt="">
                    </div>
                    <div class="caption">
                        <h4><%= compground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= compground._id %> " class="btn btn-primary">More Info</a>
                    </p>
                </div>
            <%  }); %>
        </div>
    </div>

    




</div>


<%- include("../partials/footer") %>